<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật thông tin bài viết: <b style="color: blue"><a href="{{baseurl '/admin/articles/'}}{{data.code}}"> {{data.aArticles.name}}</a> </b> </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Quản trị</a></li>
                    <li class="breadcrumb-item active">Cập nhật thông tin bài viết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <form role="form" id="ArticlesForm" method="post" action="/admin/articles/view/{{data.aArticles.id}}?_csrf={{csrfToken}}" novalidate encType="multipart/form-data">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title"><b>Thông tin bài viết</b></h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tiêu đề bài viết</label>
                                        <input type="text" class="form-control" id="name" placeholder="Tiêu đề bài viết" name="name" value="{{data.aArticles.name}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Thứ tự</label>
                                        <input type="text" class="form-control" id="orders" value="{{data.aArticles.orders}}" name="orders" >
                                    </div>
                                    <!-- /.form-group -->
                                    {{#if data.aArticles.images}}
                                    <div class="form-group">
                                        <img src="/upload/articles/{{data.aArticles.slug}}/{{data.aArticles.images}}" alt="{{data.aArticles.name}}" width="100px">
                                    </div>
                                    {{/if}}
                                    <div class="form-group">
                                        <label>Ảnh đại diện bài viết</label>
                                        <input type="file" id="images" name="images" class="file-loading" accept="image/*">
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Thuộc danh mục</label>
                                        <select class="form-control select2bs4" name="cate_id">
                                            <option value="{{data.aArticles.cate_id}}" selected/>{{data.acates.name}}</option>
                                            {{#forEach data.cates}}
                                            <option value="{{id}}"/>{{name}}</option>
                                            {{/forEach}}
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Thẻ keywords</label>
                                        <textarea class="form-control" id="keywords" type="text" name="keywords" rows="3"/>{{data.aArticles.keywords}}</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>Thẻ description</label>
                                        <textarea class="form-control" id="description" type="text" name="description" rows="3"/>{{data.aArticles.description}}</textarea>
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <div class="row">
                                <div class="card card-primary card-outline card-tabs" style="width: 100%">
                                    <div class="card-header p-0 pt-1 border-bottom-0">
                                        <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active"  data-toggle="pill" href="#shortproduct" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Tóm tắt bài viết</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link"  data-toggle="pill" href="#longproduct" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Chi tiết bài viết</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="card-body">
                                        <div class="tab-content" id="custom-tabs-four-tabContent">
                                            <div class="tab-pane fade active show" id="shortproduct" role="tabpanel">
                                                <textarea class="form-control" id="short" type="text" name="short" rows="5"/>{{data.aArticles.short}}</textarea>
                                            </div>
                                            <div class="tab-pane fade" id="longproduct" role="tabpanel">
                                                <textarea class="form-control" id="long" type="text" name="content" rows="5"/>{{data.aArticles.content}}</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer" align="center">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Cập nhật</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
