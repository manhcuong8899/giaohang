<div class="content-header">
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-3">
                <!-- Profile Image -->
                <div class="card card-gray card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="../../dist/img/user4-128x128.jpg"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">{{data.info.name}}</h3>

                        <p class="text-muted text-center">Đơn vị cung cấp</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Mã đơn vị:</b> <a class="float-right" style="color: red">{{data.info.code}}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Điện thoại:</b> <a class="float-right">{{data.info.phone}}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Người đại diện:</b> <a class="float-right">{{data.info.full_name}}</a>
                            </li>
                            <li class="list-group-item">
                                <b>Mã số thuế:</b> <a class="float-right">{{data.info.taxcode}}</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

                <!-- About Me Box -->
                <div class="card card-gray">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> Địa chỉ Email</strong>
                        <p class="text-muted">
                            {{data.info.email}}
                        </p>

                        <hr>

                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Trụ sở</strong>

                        <p class="text-muted">  {{data.info.address}}</p>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.Left col -->
            <div class="col-md-9">
                <div class="row">
                    <div class="col-lg-4 col-6">
                        <!-- small box -->
                        <div class="small-box bg-info">
                            <div class="inner">
                                <h3>150</h3>

                                <p>Sản phẩm</p>
                            </div>
                            <div class="icon">
                                <i class="ion note-icon-orderedlist"></i>
                            </div>
                            <a href="{{baseurl '/admin/products/selling/supply/'}}{{data.info.id}}" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- ./col -->
                    <div class="col-lg-4 col-6">
                        <!-- small box -->
                        <div class="small-box bg-success">
                            <div class="inner">
                                <h3>53</h3>

                                <p>Đơn hàng</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>
                            <a href="{{baseurl '/admin/supplies/orders/'}}{{data.info.id}}" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- ./col -->
                    <div class="col-lg-4 col-6">
                        <!-- small box -->
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>{{data.countuser}}</h3>

                                <p>Tài khoản</p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-person-add"></i>
                            </div>
                            <a href="{{baseurl '/admin/supplies/users/'}}{{data.info.id}}" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                    <!-- ./col -->
                </div>
                <!-- Bang chiet khau -->
                <div class="card">
                    <div class="card-header">
                        <div class="col-lg-12 col-xs-12">
                            <a class="btn-sm btn-primary" style="color: white" href="{{baseurl '/admin/discount/supply/'}}{{data.info.id}}"><i class="fa fa-plus-circle"> Thiết lập chiết khấu</i></a>
                            <a class="btn-sm btn-success" style="color: white" href="{{baseurl '/admin/products/selling/supply/'}}{{data.info.id}}"><i class="fa fa-plus-circle"> Thiết lập sản phẩm bán</i></a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table  class="table table-bordered table-striped" style="width: 100%">
                                    <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên chiết khấu</th>
                                        <th>Giá trị đơn hàng/tháng</th>
                                        <th>% chiết khấu</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#forEach data.discount}}
                                    <tr>
                                        <td>{{index}}</td>
                                        <td>{{name}}</td>
                                        <td>{{value}}</td>
                                        <td style="color: red">{{discount}}</td>
                                    </tr>
                                    {{/forEach}}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên chiết khấu</th>
                                        <th>Giá trị đơn hàng/tháng</th>
                                        <th>% chiết khấu</th>
                                    </tr>
                                    </tfoot>
                                </table>

                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- Danh sách đơn hàng -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-shopping-bag"></i>
                            <font style="color: blue">Danh sách sản phẩm đăng bán</font>
                        </h3>
                    </div>
                    <div class="card-body">
                        <table id="all1" class="table table-bordered table-striped" style="width: 100%">
                            <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên hàng hóa</th>
                                <th>Giá bán</th>
                                <th>Số lượng</th>
                                <th>Danh mục</th>
                                <th>Trạng thái</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#forEach data.products}}
                                <tr>
                                    <td>{{index}}</td>
                                    <td><a href="/admin/products/view/{{pid}}" target="_blank"> {{name}}</a> </td>
                                    <td style="color: red">{{formatvnd price}}</td>
                                    <td>{{amount}}</td>
                                    <td>{{namecate}}</td>
                                    <td>
                                        {{#ifvalue status "0"}}Chưa duyệt {{/ifvalue}}
                                        {{#ifvalue status "1"}}Đã duyệt {{/ifvalue}}
                                        {{#ifvalue status "2"}}Đăng bán {{/ifvalue}}

                                    </td>
                                </tr>
                            {{/forEach}}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Tên hàng hóa</th>
                                <th>Giá bán</th>
                                <th>Số lượng</th>
                                <th>Danh mục</th>
                                <th>Trạng thái</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body-->
                </div>
                <!-- /.card -->
            </div>
            <!-- right col -->
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->