<script type="text/javascript">
    $(document).ready(function () {
        $.validator.addMethod("valueNotEquals", function(value, element, arg){
            return arg != element.value;
        }, "Value must not equal arg.");

      /*  $.validator.setDefaults({
            submitHandler: function () {
                alert( "Form successful submitted!" );
            }
        });*/
        $('#createdDeliveryForm').validate({
            rules: {
                phone:{
                    required: true,
                },
                full_name:{
                    required: true,
                },
                address:{
                    required: true,
                    minlength:10,
                },
                province:{
                    valueNotEquals:"-1",
                },
                district:{
                    valueNotEquals:"-1",
                },
                wards:{
                    valueNotEquals:"-1",
                },
                name:{
                    required: true,
                },
                totalmoney:{
                    required: true
                }
            },
            messages: {
                phone:{
                    required: "Điền số điện thoại"
                },
                full_name: {
                    required: "Tên người nhận hàng"
                },
                address:{
                    required: "Điền địa chỉ chi tiết số nhà/ngõ/Nghách",
                    minlength: "Từ 10 ký tự"
                },
                province: {
                    valueNotEquals:"Lựa chọn Tỉnh/Thành phố",
                },
                district: {
                    valueNotEquals:"Lựa chọn Quận/Huyện",
                },
                wards: {
                    valueNotEquals:"Lựa chọn Phường/Xã",
                },
                name:{
                    required: "Tên sản phẩm"
                },
                totalmoney:{
                    required: "Điền số tiền thu hộ"
                }
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.input-group').append(error);
                element.closest('.input-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    });
</script>